{
  "manifest_version": 3,
  "name": "Security Research Terminal",
  "version": "1.0.0",
  "description": "Ethical security research toolkit for bug bounty researchers and developers",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://raw.githubusercontent.com/*",
    "http://*/*",
    "https://*/*"
  ],
  
  "devtools_page": "devtools.html",
  
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Security Research Terminal"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
